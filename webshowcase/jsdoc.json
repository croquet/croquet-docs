{
  "source": {
    "include": [
        "./ShowcaseSpec.md",
        "./dummy.js"
    ]
  },
  "opts": {
    "access": ["public"],
    "tutorials": "./tutorials",
    "encoding": "utf8",
    "recurse": false,
    "verbose": true,
    "mainpagetitle": "Croquet Metaverse Web Showcase"
  },
  "plugins": ["plugins/markdown"],
  "markdown": {
    "parser": "gfm",
    "hardwrap": false,
    "idInHeadings": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": false,
      "includeDate": false,
      "useLongnameInNav": true,
      "staticFiles": {
        "include": [
          "tutorials"
        ],
        "includePattern": "\\.(png|jpg|svg|gif)$"
      }
    }
  }
}
