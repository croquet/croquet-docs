{
  "source": {
    "include": [
        "./top.md",
        "./root-doc.js",
        "./mixin-doc.js",
        "./player-doc.js"
    ]
  },
  "opts": {
    "access": ["public"],
    "tutorials": "./tutorials",
    "encoding": "utf8",
    "recurse": false,
    "verbose": true,
    "mainpagetitle": "Croquet Worldcore @CROQUET_VERSION@ Overview",
    "theme_opts": {
        "theme": "light",
        "subpackages": ["audio", "behavior", "input", "rapier", "three", "vector", "webGL", "widget"],
        "include_css": ["../templates/croquet/static/styles/index.css"]
    }
  },
  "plugins": ["plugins/markdown"],
  "markdown": {
    "parser": "gfm",
    "hardwrap": false,
    "idInHeadings": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": false,
      "includeDate": false,
      "useLongnameInNav": true,
      "staticFiles": {
        "includePattern": "\\.(png|jpg|gif)$"
      }
    }
  }
}
