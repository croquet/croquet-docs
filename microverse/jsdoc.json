{
  "source": {
    "include": [
        "./QuickStart.md",
        "./card.js",
        "./avatar.js"
    ]
  },
  "opts": {
    "access": ["public"],
    "tutorials": "./tutorials",
    "encoding": "utf8",
    "recurse": false,
    "verbose": true,
    "mainpagetitle": "Croquet Microverse",
    "theme_opts": {
        "theme": "light",
        "include_css": ["../templates/croquet/static/styles/index.css"]
    }
  },
  "plugins": ["plugins/markdown"],
  "markdown": {
    "parser": "gfm",
    "hardwrap": false,
    "idInHeadings": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": false,
      "includeDate": false,
      "useLongnameInNav": true,
      "staticFiles": {
        "include": [
          "tutorials"
        ],
        "includePattern": "\\.(png|jpg|svg|gif)$"
      }
    }
  }
}
