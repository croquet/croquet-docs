{
  "name": "croquet-doc-microverse",
  "version": "0.1.1",
  "description": "Croquet Microverse Documentation",
  "scripts": {
    "start": "npm-watch",
    "build": "../build.sh microverse",
    "doBuild": "./build.sh",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "./QuickStart.md",
        "./card.js",
        "./avatar.js",
        "./tutorials/**/*",
        "./jsdoc.json",
        "./build.sh",
        "./package.json"
      ],
      "ignore": [
        "dist/"
      ],
      "extensions": "js,json,html,css,tmpl,md,png,jpg,gif,svg,ttf,woff",
      "quiet": false
    }
  },
  "author": "Croquet Labs",
  "license": "Apache-2.0"
}
